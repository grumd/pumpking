{
  "name": "@pumpking/root",
  "private": true,
  "version": "1.0.0",
  "engines": {
    "npm": ">=9.5.0",
    "node": ">=20.5.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "npm-run-all --parallel start:*",
    "start:api": "npm start --prefix packages/api",
    "start:web": "npm start --prefix packages/web",
    "build:web": "npm run build --prefix packages/web",
    "test:api": "npm run test:trace --prefix packages/api",
    "clean": "rm -rf node_modules && rm -rf packages/*/node_modules",
    "prettier": "prettier --write \"packages/**/*.{js,jsx,ts,tsx}\"",
    "ts": "npm run ts-check --prefix packages/api && npm run ts --prefix packages/web"
  },
  "author": "grumd",
  "license": "MIT",
  "devDependencies": {
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "typescript": "^5.9.3"
  }
}
