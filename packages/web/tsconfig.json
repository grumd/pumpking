{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "allowJs": true,
    "checkJs": false,
    "baseUrl": "./src",
    "noEmit": true,
    "paths": {
      "@/api/*": ["../../api/src/*"]
    },
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx"
  },
  "include": ["./src"],
  "references": [{ "path": "../api/tsconfig.ref.json" }]
}
