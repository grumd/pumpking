{
  "name": "@pumpking/api",
  "version": "1.0.0",
  "description": "Pumpking.top API",
  "main": "src/index.ts",
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "exec": "ts-node ./src/index.ts",
    "ext": "ts, js",
    "env": {
      "NODE_ENV": "development",
      "DEBUG": "backend-ts:*"
    }
  },
  "scripts": {
    "start": "nodemon",
    "start:ts-node": "ts-node --transpile-only ./src/index.ts",
    "pm2": "cross-env NODE_PATH=./build pm2 startOrRestart ./pm2.config.js",
    "build": "rimraf ./build && tsc",
    "ts-check": "tsc --noEmit --pretty",
    "test:run": "cross-env NODE_ENV=test mocha -r tsconfig-paths/register -r ts-node/register -r ./src/test/helpers/rootHooks.ts ./src/test/**/*.test.ts",
    "test": "cross-env DEBUG=backend-ts:test:* npm run test:run",
    "test:trace": "cross-env DEBUG=backend-ts:* npm run test:run",
    "knex": "knex",
    "knex:init": "knex init -x ts",
    "create-test-database": "ts-node ./src/test/cloneDatabase.ts",
    "migrate:make": "cross-env DEBUG=backend-ts:* knex --knexfile ./src/knexfile.ts migrate:make -x ts",
    "migrate:latest": "cross-env DEBUG=backend-ts:* knex --knexfile ./src/knexfile.ts migrate:latest",
    "migrate:rollback": "cross-env DEBUG=backend-ts:* knex --knexfile ./src/knexfile.ts migrate:rollback",
    "migrate:rollback-all": "cross-env DEBUG=backend-ts:* knex --knexfile ./src/knexfile.ts migrate:rollback --all",
    "migrate:up": "cross-env DEBUG=backend-ts:* knex --knexfile ./src/knexfile.ts migrate:up",
    "migrate:down": "cross-env DEBUG=backend-ts:* knex --knexfile ./src/knexfile.ts migrate:down"
  },
  "keywords": [],
  "author": "grumd",
  "license": "MIT",
  "dependencies": {
    "@trpc/server": "^10.28.0",
    "@wwwouter/typed-knex": "^4.14.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "debug": "^4.3.1",
    "dotenv": "^9.0.2",
    "express": "^4.18.2",
    "express-form-data": "^2.0.22",
    "express-jsdoc-swagger": "^1.6.1",
    "https": "^1.0.0",
    "knex": "^2.4.2",
    "lodash": "^4.17.21",
    "lusca": "^1.7.0",
    "morgan": "^1.10.0",
    "mysql2": "^2.2.5",
    "nodemon": "^2.0.22",
    "pm2": "^5.3.0",
    "regression": "^2.0.1",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^3.14.2",
    "typescript": "^5.0.4",
    "validatorjs": "^3.22.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/chai": "^4.2.18",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.17",
    "@types/express-form-data": "^2.0.2",
    "@types/knex-cleaner": "^1.3.3",
    "@types/lodash": "^4.14.170",
    "@types/lusca": "^1.7.0",
    "@types/mocha": "^8.2.2",
    "@types/mock-knex": "^0.4.3",
    "@types/morgan": "^1.9.2",
    "@types/node": "^15.6.1",
    "@types/regression": "^2.0.0",
    "@types/supertest": "^2.0.11",
    "@types/validatorjs": "^3.15.0",
    "chai": "^4.3.4",
    "esm": "^3.2.25",
    "knex-cleaner": "^1.3.1",
    "mocha": "^8.4.0",
    "supertest": "^6.1.3"
  }
}
