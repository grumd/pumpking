{
  "name": "@pumpking/api",
  "version": "1.1.1",
  "description": "Pumpking.top API",
  "main": "src/index.ts",
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "exec": "tsx ./src/index.ts",
    "ext": "ts, js",
    "env": {
      "NODE_ENV": "development",
      "DEBUG": "backend-ts:*"
    }
  },
  "scripts": {
    "start": "nodemon",
    "start:tsx": "tsx ./src/index.ts",
    "debug": "cross-env NODE_ENV=development DEBUG=backend-ts:* tsx --inspect ./src/index.ts",
    "pm2": "cross-env NODE_PATH=./build pm2 startOrRestart ./pm2.config.js",
    "build": "rimraf ./build && tsc --project ./tsconfig.build.json",
    "ts-check": "tsc --noEmit --pretty",
    "test:run": "cross-env NODE_ENV=test mocha -r tsconfig-paths/register -r ts-node/register -r ./src/test/helpers/rootHooks.ts ./src/test/**/*.test.ts",
    "test": "cross-env DEBUG=backend-ts:test:* npm run test:run -- --exit",
    "test:trace": "cross-env DEBUG=backend-ts:* npm run test:run -- --exit",
    "test:watch": "cross-env DEBUG=backend-ts:test:* npm run test:run -- --watch --watch-files ./src/**/*",
    "migrate:make": "tsx ./scripts/migrationMake.ts",
    "migrate:make-sql": "tsx ./scripts/migrationMakeSql.ts",
    "migrate:latest": "tsx ./scripts/migrateToLatest.ts",
    "migrate:rollback": "tsx ./scripts/migrationRollback.ts",
    "generate-kysely": "kysely-codegen --url mysql://root:@localhost/piutop --out-file ./src/types/database.ts"
  },
  "keywords": [],
  "author": "grumd",
  "license": "MIT",
  "dependencies": {
    "@trpc/server": "^10.28.0",
    "concat-stream": "^2.0.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "debug": "^4.3.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-form-data": "^2.0.22",
    "express-jsdoc-swagger": "^1.6.1",
    "ffmpeg-static": "^5.1.0",
    "https": "^1.0.0",
    "kysely": "^0.25.0",
    "lodash": "^4.17.21",
    "lusca": "^1.7.0",
    "morgan": "^1.10.0",
    "mysql2": "^2.3.3",
    "node-cron": "^3.0.3",
    "nodemon": "^2.0.22",
    "pm2": "^5.3.0",
    "regression": "^2.0.1",
    "rimraf": "^5.0.1",
    "sanitize-filename": "^1.6.3",
    "tsconfig-paths": "^3.14.2",
    "validatorjs": "^3.22.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/chai": "^4.2.18",
    "@types/concat-stream": "^2.0.0",
    "@types/cors": "^2.8.12",
    "@types/debug": "^4.1.8",
    "@types/express": "^4.17.17",
    "@types/express-form-data": "^2.0.2",
    "@types/lodash": "^4.14.170",
    "@types/lusca": "^1.7.0",
    "@types/minimist": "^1.2.2",
    "@types/mocha": "^8.2.2",
    "@types/morgan": "^1.9.2",
    "@types/node": "^20.5.1",
    "@types/node-cron": "^3.0.11",
    "@types/regression": "^2.0.0",
    "@types/supertest": "^2.0.11",
    "@types/validatorjs": "^3.15.0",
    "chai": "^4.3.4",
    "esm": "^3.2.25",
    "kysely-codegen": "^0.10.0",
    "minimist": "^1.2.8",
    "mocha": "^8.4.0",
    "supertest": "^6.1.3",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.7"
  }
}
